@model List<FPTBook.Models.User>

@{
    ViewData["Title"] = "ViewListAccounts";
}

<h1>Manage Account</h1>
<p>
    <button class="btn btn-primary"><a style="color: white;" asp-controller="UserAuthentication"
            asp-action="AddAccount">Add</a></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.gender</td>
                <td>@item.address</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Role</td>
                <td>
                    <button class="btn btn-primary" style="margin-top: 0px;">
                        <a style="color: white;" asp-controller="UserAuthentication" asp-action="ResetPassword"
                        asp-route-username="@item.UserName">Reset</a>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>