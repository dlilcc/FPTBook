@model FPTBook.Models.Book

@{
    ViewData["Title"] = "DetailBook";
}
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h1>Detail Book</h1>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>@Model.id</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>@Model.name</td>
                    </tr>
                    <tr>
                        <th>Author</th>
                        <td>@Model.author</td>
                    </tr>
                    <tr>
                        <th>Date Public</th>
                        <td>@Model.date</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>@Model.description</td>
                    </tr>
                    <tr>
                        <th>Quantity</th>
                        <td>@Model.quantity</td>
                    </tr>
                    <tr>
                        <th>Old Price</th>
                        <td>@Model.old_price</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>@Model.price</td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>@Model.category_id</td>
                    </tr>
                    <tr>
                        <th>Is Deleted</th>
                        <td>@Model.is_deleted</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>@Model.status</td>
                    </tr>

                </tbody>
            </table>
            <a class="btn btn-outline-primary" type="button" asp-controller="StoreOwner" asp-action="UpdateBook"  asp-route-id="@Model.id"
                role="button">Update</a>
            <a class="btn btn-outline-info" role="button" asp-controller="StoreOwner"
                asp-action="ViewListBooks">Back</a>
        </div>
        <div class="col-sm-6">
            <img src="~/img/@Model.image" alt="@Model.name" style="width: 400px;">
        </div>
    </div>
</div>/