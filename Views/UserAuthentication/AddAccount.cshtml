@model FPTBook.Models.DTO.RegistrationModel

@{
    ViewData["Title"] = "AddAccount";
}

<div class="container">
    <h2>Add New Account</h2>
    <form asp-controller="UserAuthentication" asp-action="AddAccount" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-2 control-label">Username(*): </label>
            <div class="col-sm-10">
                <input type="text" asp-for="Username" class="form-control" placeholder="Username" />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Password(*): </label>
            <div class="col-sm-10">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Confirm Password(*): </label>
            <div class="col-sm-10">
                <input type="password" asp-for="PasswordConfirm" class="form-control"
                    placeholder="Confirm your Password" />
                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Full name(*): </label>
            <div class="col-sm-10">
                <input type="text" asp-for="Full_Name" class="form-control" placeholder="Enter Fullname" />
                <span class="text-danger" asp-validation-for="Full_Name"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Email(*): </label>
            <div class="col-sm-10">
                <input type="text" asp-for="Email" class="form-control" placeholder="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Address(*): </label>
            <div class="col-sm-10">
                <input type="text" asp-for="Address" class="form-control" placeholder="Address" />
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Telephone(*): </label>
            <div class="col-sm-10">
                <input type="text" asp-for="Phone" class="form-control" placeholder="Telephone" />
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Gender(*): </label>
            <div class="col-sm-10">
                <label class="radio-inline"><input type="radio" asp-for="Gender" value="Male" checked />Male</label>
                <label class="radio-inline"><input type="radio" asp-for="Gender" value="Female" />Female</label>
                <br>
                <span class="text-danger" asp-validation-for="Gender"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Role(*): </label>
            <div class="col-sm-10">
                <select asp-for="Role">
                    <option value="customer" selected>Customer</option>
                    <option value="storeowner">Store Owner</option>
                    <option value="admin">Admin</option>
                </select>
                <br>
                <span class="text-danger" asp-validation-for="Role"></span>
            </div>
        </div>
        @if (TempData["msg"] != null)
        {
            <div class="form-group">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <span class="text-danger">@TempData["msg"]</span>
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-primary" value="Register" />
                <button class="btn btn-primary"><a style="color: white;" type="button" asp-controller="Admin"
                        asp-action="ViewListAccounts">Back</a>
                </button>
            </div>
        </div>
    </form>
</div>
